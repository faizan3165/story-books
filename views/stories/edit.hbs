<div class="container">


    <div class="card storyCard">
        <div class="card-content">
            <div class="row">

                <h4 class="storyCardTitle">Edit your Story</h4>

                <form action="/stories/{{story._id}}?_method=PUT" method="POST" class="col s12">
                    <div class="row">
                        <div class="input-field">
                            <input type="text" id="title" name="title" value="{{story.title}}">
                            <label for="title">Title</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field">
                            <select id="status" name="status">
                                
                                {{#select story.status}}
                                <option value="public" selected>Public</option>
                                <option value="private">Private</option>
                                {{/select}}

                            </select>
                            <label for="status">Status</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field">
                            <h5>Tell Us Your Story:</h5>
                            <textarea id="body" name="body">{{story.body}}</textarea>
                        </div>
                    </div>

                    <div class="row">
                        <input type="submit" value="Save" class="btn">
                        <a href="/stories" class="btn orange">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

