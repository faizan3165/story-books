<h1>User's Stories</h1>

<div class="row">
    {{#each stories}}

        <div class="col s12 m4">
            <div class="card storyCard activator">
                
                <div class="card-content center-align">
                    <h4>{{title}}</h4>
                        
                    <p class="card-title grey-text text-darken-4">
                        {{stripTags (truncate body 100)}}
                        <i class="material-icons right card-title activator ">more_vert</i>
                    </p>
                        
                    <br>
                    
                    <div class="chip">
                        <img src="{{user.image}}" alt="user image">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>

                </div>
                
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Full Story
                        <i class="material-icons right">close</i></span>
                        <div class="divider"></div>
                    <p>{{stripTags body}}</p>
                </div>

                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>

    {{else}}
        <h1 class="center-align">Add Stories</h1>
    {{/each}}
</div>